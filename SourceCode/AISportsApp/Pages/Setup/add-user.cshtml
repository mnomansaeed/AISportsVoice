@page
@model AISportsApp.Pages.add_userModel
@{
ViewData["Title"] = "user";
}
<!-- Content Header (Page header) -->
<div class="content-header">
<div class="container-fluid">
<div class="row mb-2">
<div class="col-sm-6">
<h1 class="m-0"> Add 
User
</h1>
</div>
<div class="col-sm-6">
<ol class="breadcrumb float-sm-right">
<li class="breadcrumb-item"><a href="~/Setup/user">User</a></li>
<li class="breadcrumb-item active"> Add User</li>
</ol>
</div>
</div>
</div><!-- /.container-fluid -->
</div><!-- /.content-header -->
<!-- Main content -->
<div class="content">
<div class="container-fluid">
<div class="row">
<div class="col-lg-12">
<div class="card card-primary ">
<div class="card-header">
<h5 class="m-0"> Add User</h5>
</div>
<form id = "userForm" name="userForm" method="post" asp-page-handler="AddUser">
<div class="card-body">
<input type="hidden" asp-for="UserId"/>
<div class="row">
<div class="col-sm-12">
<div class="form-group">
<label> Select Employee</label>
<select asp-items="Model.EmployeeIds" asp-for="EmployeeId" id="EmployeeId" name="EmployeeId" class="form-control"></select>
<span asp-validation-for="EmployeeId" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-12">
<div class="form-group">
<label> Select User Group</label>
<select asp-items="Model.UserGroupIds" asp-for="UserGroupId" id="UserGroupId" name="UserGroupId" class="form-control"></select>
<span asp-validation-for="UserGroupId" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-12">
<div class="form-group">
<label> Select Business Entity</label>
<select asp-items="Model.Location_Ids" asp-for="Location_Id" id="Location_Id" name="Location_Id" class="form-control"></select>
<span asp-validation-for="Location_Id" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>User Name</label>
<input  asp-for="UserName" id="UserName" name="UserName" type = "text" class="form-control" placeholder="Enter UserName...">
<span asp-validation-for="UserName" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>Password</label>
<input  asp-for="Password" id="Password" name="Password" type = "text" class="form-control" placeholder="Enter Password...">
<span asp-validation-for="Password" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-12">
<div class="form-group">
<label>Email</label>
<input  asp-for="Email" id="Email" name="Email" type = "text" class="form-control" placeholder="Enter Email...">
<span asp-validation-for="Email" class="text-danger"></span>
</div>
</div>

</div>

<input type="hidden" asp-for="Is_Active"/>
<input type="hidden" asp-for="Created_Date"/>
<input type="hidden" asp-for="Created_By"/>
<input type="hidden" asp-for="Modified_Date"/>
<input type="hidden" asp-for="Modified_By"/>
<input type="hidden" asp-for="Audit_Id"/>
<input type="hidden" asp-for="User_IP"/>
<input type="hidden" asp-for="Site_Id"/>
</div>
<div class="card-footer">
<button id = "btnAddUser" type="submit" Class="btn btn-primary">Add</button>
</div>
</form>
</div>
</div>
</div>
<!-- /.row -->
<div class="row">
<div class="col-12">
<!-- Display ModelState Errors -->
@if (!Model.ModelState.IsValid)
{
<div class="text-danger">
<ul>
@foreach (var error in Model.ModelState.Values.SelectMany(v => v.Errors))
{
<li>@error.ErrorMessage</li>
}
</ul>
</div>
}
</div>
</div>
</div><!-- /.container-fluid -->
</div>
  @section Scripts {
<partial name="_ValidationScriptsPartial" />
}
<!-- /.content -->
<Environment include = "Development" >
<script src="~/js/customscript/add-user.js" asp-append-version="true"></script>
</environment>
<Environment exclude = "Development" >
<script src="~/js/customscript/add-user.min.js" asp-append-version="true"></script>
</environment>

