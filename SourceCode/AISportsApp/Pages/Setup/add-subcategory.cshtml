@page
@model AISportsApp.Pages.add_subcategoryModel
@{
ViewData["Title"] = "subcategory";
}
<!-- Content Header (Page header) -->
<div class="content-header">
<div class="container-fluid">
<div class="row mb-2">
<div class="col-sm-6">
<h1 class="m-0"> Add 
Sub Asset Type
</h1>
</div>
<div class="col-sm-6">
<ol class="breadcrumb float-sm-right">
<li class="breadcrumb-item"><a href="~/Setup/subcategory">Sub Asset Type</a></li>
<li class="breadcrumb-item active"> Add Sub Asset Type</li>
</ol>
</div>
</div>
</div><!-- /.container-fluid -->
</div><!-- /.content-header -->
<!-- Main content -->
<div class="content">
<div class="container-fluid">
<div class="row">
<div class="col-lg-12">
<div class="card card-primary ">
<div class="card-header">
<h5 class="m-0"> Add Sub Asset Type</h5>
</div>
<form id = "subcategoryForm" name="subcategoryForm" method="post" asp-page-handler="AddSubCategory">
<div class="card-body">
<input type="hidden" asp-for="SubCategoryId"/>
<div class="row">
<div class="col-sm-12">
<div class="form-group">
<label> Select Business Entity</label>
<select asp-items="Model.Location_IDs" asp-for="Location_ID" id="Location_ID" name="Location_ID" class="form-control"></select>
<span asp-validation-for="Location_ID" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-12">
<div class="form-group">
<label> Select Asset Type</label>
<select asp-items="Model.CategoryIds" asp-for="CategoryId" id="CategoryId" name="CategoryId" class="form-control"></select>
<span asp-validation-for="CategoryId" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Sub Asset Type Name</label>
<input  asp-for="SubCategoryName" id="SubCategoryName" name="SubCategoryName" type = "text" class="form-control" placeholder="Enter SubCategoryName...">
<span asp-validation-for="SubCategoryName" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>Desription</label>
<input  asp-for="Desription" id="Desription" name="Desription" type = "text" class="form-control" placeholder="Enter Desription...">
<span asp-validation-for="Desription" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Notes</label>
<textarea rows="5" asp-for="Notes" id="Notes" name="Notes" type = "text" class="form-control" placeholder="Enter Notes..."></textarea>
<span asp-validation-for="Notes" class="text-danger"></span>
</div>
</div>
<input type="hidden" asp-for="Is_Active"/>
</div>
<input type="hidden" asp-for="Created_Date"/>
<input type="hidden" asp-for="Created_By"/>
<input type="hidden" asp-for="Modified_Date"/>
<input type="hidden" asp-for="Modified_By"/>
<input type="hidden" asp-for="Audit_Id"/>
<input type="hidden" asp-for="User_IP"/>
<input type="hidden" asp-for="Site_Id"/>
</div>
<div class="card-footer">
<button id = "btnAddSubCategory" type="submit" Class="btn btn-primary">Add</button>
</div>
</form>
</div>
</div>
</div>
<!-- /.row -->
<div class="row">
<div class="col-12">
<!-- Display ModelState Errors -->
@if (!Model.ModelState.IsValid)
{
<div class="text-danger">
<ul>
@foreach (var error in Model.ModelState.Values.SelectMany(v => v.Errors))
{
<li>@error.ErrorMessage</li>
}
</ul>
</div>
}
</div>
</div>
</div><!-- /.container-fluid -->
</div>
  @section Scripts {
<partial name="_ValidationScriptsPartial" />
}
<!-- /.content -->
<Environment include = "Development" >
<script src="~/js/customscript/add-subcategory.js" asp-append-version="true"></script>
</environment>
<Environment exclude = "Development" >
<script src="~/js/customscript/add-subcategory.min.js" asp-append-version="true"></script>
</environment>

