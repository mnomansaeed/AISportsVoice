@page
@model AISportsApp.Pages.add_vendorModel
@{
ViewData["Title"] = "vendor";
}
<!-- Content Header (Page header) -->
<div class="content-header">
<div class="container-fluid">
<div class="row mb-2">
<div class="col-sm-6">
<h1 class="m-0"> Add 
Vendor
</h1>
</div>
<div class="col-sm-6">
<ol class="breadcrumb float-sm-right">
<li class="breadcrumb-item"><a href="~/Setup/vendor">Vendor</a></li>
<li class="breadcrumb-item active"> Add Vendor</li>
</ol>
</div>
</div>
</div><!-- /.container-fluid -->
</div><!-- /.content-header -->
<!-- Main content -->
<div class="content">
<div class="container-fluid">
<div class="row">
<div class="col-lg-12">
<div class="card card-primary ">
<div class="card-header">
<h5 class="m-0"> Add Vendor</h5>
</div>
<form id = "vendorForm" name="vendorForm" method="post" asp-page-handler="AddVendor">
<div class="card-body">
<input type="hidden" asp-for="VendorId"/>
<div class="row">
<div class="col-sm-12">
<div class="form-group">
<label> Select Business Entity</label>
<select asp-items="Model.Location_IDs" asp-for="Location_ID" id="Location_ID" name="Location_ID" class="form-control"></select>
<span asp-validation-for="Location_ID" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Vendor Code</label>
<input  asp-for="VendorCode" id="VendorCode" name="VendorCode" type = "text" class="form-control" placeholder="Enter VendorCode...">
<span asp-validation-for="VendorCode" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>Vendor Name</label>
<input  asp-for="VendorName" id="VendorName" name="VendorName" type = "text" class="form-control" placeholder="Enter VendorName...">
<span asp-validation-for="VendorName" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>VAT No</label>
<input  asp-for="VATRegistrationNo" id="VATRegistrationNo" name="VATRegistrationNo" type = "text" class="form-control" placeholder="Enter VATRegistrationNo...">
<span asp-validation-for="VATRegistrationNo" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>Contact Name</label>
<input  asp-for="ContactName" id="ContactName" name="ContactName" type = "text" class="form-control" placeholder="Enter ContactName...">
<span asp-validation-for="ContactName" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Contact Title</label>
<input  asp-for="ContactTitle" id="ContactTitle" name="ContactTitle" type = "text" class="form-control" placeholder="Enter ContactTitle...">
<span asp-validation-for="ContactTitle" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>Phone</label>
<input  asp-for="PhoneNumber" id="PhoneNumber" name="PhoneNumber" type = "text" class="form-control" placeholder="Enter PhoneNumber...">
<span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Email</label>
<input  asp-for="Email" id="Email" name="Email" type = "text" class="form-control" placeholder="Enter Email...">
<span asp-validation-for="Email" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>Address</label>
<input  asp-for="AddressLine1" id="AddressLine1" name="AddressLine1" type = "text" class="form-control" placeholder="Enter AddressLine1...">
<span asp-validation-for="AddressLine1" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Address Line2</label>
<input  asp-for="AddressLine2" id="AddressLine2" name="AddressLine2" type = "text" class="form-control" placeholder="Enter AddressLine2...">
<span asp-validation-for="AddressLine2" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>City</label>
<input  asp-for="City" id="City" name="City" type = "text" class="form-control" placeholder="Enter City...">
<span asp-validation-for="City" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>State</label>
<input  asp-for="State" id="State" name="State" type = "text" class="form-control" placeholder="Enter State...">
<span asp-validation-for="State" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>Postal Code</label>
<input  asp-for="PostalCode" id="PostalCode" name="PostalCode" type = "text" class="form-control" placeholder="Enter PostalCode...">
<span asp-validation-for="PostalCode" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Country</label>
<input  asp-for="Country" id="Country" name="Country" type = "text" class="form-control" placeholder="Enter Country...">
<span asp-validation-for="Country" class="text-danger"></span>
</div>
</div>
<div class="col-sm-6">
<div class="form-group">
<label>WebsiteURL</label>
<input  asp-for="WebsiteURL" id="WebsiteURL" name="WebsiteURL" type = "text" class="form-control" placeholder="Enter WebsiteURL...">
<span asp-validation-for="WebsiteURL" class="text-danger"></span>
</div>
</div>
</div>
<div class="row">
<div class="col-sm-6">
<div class="form-group">
<label>Notes</label>
<textarea rows="5" asp-for="Notes" id="Notes" name="Notes" type = "text" class="form-control" placeholder="Enter Notes..."></textarea>
<span asp-validation-for="Notes" class="text-danger"></span>
</div>
</div>
<input type="hidden" asp-for="Is_Active"/>
</div>
<input type="hidden" asp-for="Created_Date"/>
<input type="hidden" asp-for="Created_By"/>
<input type="hidden" asp-for="Modified_Date"/>
<input type="hidden" asp-for="Modified_By"/>
<input type="hidden" asp-for="Audit_Id"/>
<input type="hidden" asp-for="User_IP"/>
<input type="hidden" asp-for="Site_Id"/>
</div>
<div class="card-footer">
<button id = "btnAddVendor" type="submit" Class="btn btn-primary">Add</button>
</div>
</form>
</div>
</div>
</div>
<!-- /.row -->
<div class="row">
<div class="col-12">
<!-- Display ModelState Errors -->
@if (!Model.ModelState.IsValid)
{
<div class="text-danger">
<ul>
@foreach (var error in Model.ModelState.Values.SelectMany(v => v.Errors))
{
<li>@error.ErrorMessage</li>
}
</ul>
</div>
}
</div>
</div>
</div><!-- /.container-fluid -->
</div>
  @section Scripts {
<partial name="_ValidationScriptsPartial" />
}
<!-- /.content -->
<Environment include = "Development" >
<script src="~/js/customscript/add-vendor.js" asp-append-version="true"></script>
</environment>
<Environment exclude = "Development" >
<script src="~/js/customscript/add-vendor.min.js" asp-append-version="true"></script>
</environment>

